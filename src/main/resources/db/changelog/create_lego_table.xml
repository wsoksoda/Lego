<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_lego_table" author="wsoksoda">
        <createTable tableName="lego">
            <column name="set_id" type="VARCHAR(100)"/>
            <column name="name" type="VARCHAR(100)"/>
            <column name="year" type="INT"/>
            <column name="theme" type="VARCHAR(100)"/>
            <column name="subtheme" type="VARCHAR(100)"/>
            <column name="theme_group" type="VARCHAR(100)" />
            <column name="category" type="VARCHAR(100)"/>
            <column name="pieces" type="INT"/>
            <column name="minifigs" type="INT"/>
            <column name="age_range_min" type="INT"/>
            <column name="us_retail_price" type="NUMERIC(7,2)"/>
            <column name="brickset_url" type="VARCHAR(255)" />
            <column name="thumbnail_url" type="VARCHAR(255)"/>
            <column name="image_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
